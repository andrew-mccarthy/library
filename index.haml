%head
  %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
  %meta(charset="utf-8")
  %title MVCSS Library
  %link(href="application.css" rel="stylesheet")
%body
  / Header
  %header.row--a.siteHeader
    .cell.grid
      .box--a
        %h1 MVCSS Library
        %h2 Markup Patterns &amp; JavaScript Components
      .box--b
        %a.btn--a.btn--block(href="#") Download Code &rarr;

  / Content
  %section.row.content
    .cell.grid
      %aside.box--a
        %ul.sectionList
          %li <a href="#buttons" data-hash="#buttons">Buttons</a>
          %li <a href="#containers" data-hash="#containers">Containers</a>
          %li <a href="#content" data-hash="#content">Content</a>
          %li <a href="#dropdowns" data-hash="#dropdowns">Dropdowns</a>
          %li <a href="#forms" data-hash="#forms">Forms</a>
          %li <a href="#grids" data-hash="#grids">Grids</a>
          %li <a href="#hash-urls" data-hash="#hash-urls">Hash URLs</a>
          %li <a href="#icons" data-hash="#icons">Icons</a>
          %li <a href="#lists" data-hash="#lists">Lists</a>
          %li <a href="#modals" data-hash="#modals">Modals</a>
          %li <a href="#popovers" data-hash="#popovers">Popovers</a>
          %li <a href="#tables" data-hash="#tables">Tables</a>
          %li <a href="#tabs" data-hash="#tabs">Tabs</a>
          %li <a href="#tooltips" data-hash="#tooltips">Tooltips</a>
      .box--b
        / Buttons
        .contentSection#buttons
          %h3 Buttons
          / Default Button
          .card--a.example
            %h4 Default Button
            %p.example-label .btn--a
            .example-output
              %a.btn--a(href="#") Button
            .example-markup
              %pre
                :preserve
                  %a.btn--a(href="#") Button
          / Full-width Button
          .card--a.example
            %h4 Full-width Button
            %p.example-label .btn--a.btn--block
            .example-output
              %a.btn--a.btn--block(href="#") Button
            .example-markup
              %pre
                :preserve
                  %a.btn--a.btn--block(href="#") Button
          / Multiple Buttons
          .card--a.example
            %h4 Multiple Buttons
            %p.example-label .btn--a
            .example-output
              %a.btn--a(href="#") Button
              %a.btn--a(href="#") Button
              %a.btn--a(href="#") Button
              %a.btn--a(href="#") Button
            .example-markup
              %pre
                :preserve
                  %a.btn--a(href="#") Button
                  %a.btn--a(href="#") Button
                  %a.btn--a(href="#") Button
                  %a.btn--a(href="#") Button
          / Large Button
          .card--a.example
            %h4 Large Button
            %p.example-label .btn--a.btn--large
            .example-output
              %a.btn--a.btn--large(href="#") Button
            .example-markup
              %pre
                :preserve
                  %a.btn--a.btn--large(href="#") Button
          / Small Button
          .card--a.example
            %h4 Small Button
            %p.example-label .btn--a.btn--small
            .example-output
              %a.btn--a.btn--small(href="#") Button
            .example-markup
              %pre
                :preserve
                  %a.btn--a.btn--small(href="#") Button
          / Mini Button
          .card--a.example
            %h4 Mini Button
            %p.example-label .btn--a.btn--mini
            .example-output
              %a.btn--a.btn--mini(href="#") Button
            .example-markup
              %pre
                :preserve
                  %a.btn--a.btn--mini(href="#") Button
        / Containers
        .contentSection#containers
          %h3 Containers
        / Content
        .contentSection#content
          %h3 Content
        / Dropdowns
        .contentSection#dropdowns
          %h3 Dropdowns
        / Forms
        .contentSection#forms
          %h3 Forms
        / Grids
        .contentSection#grids
          %h3 Grids
        / Hash URLs
        .contentSection#hash-urls
          %h3 Hash URLs
          .card--a.example
            %h4 Markup
            %p.example-label Haml
            .example-markup
              %pre
                :preserve
                  %ul.sectionList
                    %li
                      %a(href="#example-01" data-hash="#example-01") Example 1
                    %li
                      %a(href="#example-02" data-hash="#example-02") Example 2

                  .contentSection#example-01
                    %h2 Example 01
                  .contentSection#example-02
                    %h2 Example 02
          .card--a.example
            %h4 JavaScript
            %p.example-label JavaScript
            .example-markup
              %pre
                :preserve
                  $.hashURLs({
                    list: $('.sectionList a'),
                    content: $('.contentSection')
                  });
        / Icons
        .contentSection#icons
          %h3 Icons
        / Lists
        .contentSection#lists
          %h3 Lists
        / Modals
        .contentSection#modals
          %h3 Modals
        / Popovers
        .contentSection#popovers
          %h3 Popovers
        / Tables
        .contentSection#tables
          %h3 Tables
        / Tabs
        .contentSection#tabs
          %h3 Tabs
        / Tooltips
        .contentSection#tooltips
          %h3 Tooltips

  %script(type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js")
  %script(type="text/javascript" src="javascripts/hash-urls.js")
  %script(type="text/javascript" src="assets/javascripts/application.js")

  :javascript
    $(function() {
      $.hashURLs({
        list: $('.sectionList a'),
        content: $('.contentSection')
      });
    });
</html>
